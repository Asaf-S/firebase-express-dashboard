  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web - Launch via NPM",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run", "start"
      ],
      "outputCapture": "std",
      "envFile": "${workspaceFolder}/.env",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
  ]
}